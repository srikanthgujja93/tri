<apex:page title="forgot password"  standardstylesheets="false" setup="false" showheader="false" cache="false"  doctype="html-5.0">
     <apex:composition template="wk_wedge__WedgesiteTemplatePage">
        <apex:define name="templatebody">
        <style>
                .wdg-msg--box{
                    height: 500px;
                    width: 600px;
                    margin: 6% auto;
                    padding:1px 60px;
                    box-shadow: 0px 0px 15px 4px #ccc;
                    border-radius: 3px;
                    text-align:center;
                }
                .wdg-msg--box .wdg-email-sent{
                    width:250px;
                    height:150px;
                    margin:35px auto;
                    background:transparent  url("{!URLFOR($Resource.wedgecommerce,'wedgeCommerce/images/image-confirmation.png')}") no-repeat center;
                    background-size: contain;
                }
                .wdg-msg--box .wdg-msg-title{
                    text-align:center;
                    font-size:16px;
                    font-weight:700;
                }
                .wdg-msg--box .wdg-msg-title.highlight{
                    font-size:30px;
                }
                
                .wdg-msg--box .wdg-msgbox--input{
                    display: block;
                    margin: 0 auto;
                    padding: 6px 12px;
                    border-radius: 3px;
                    border-width: 1px;
                    border-style: solid;
                    width: 300px;
                    margin-top: 25px;
                    margin-bottom: 25px;
                    border-color: #adadad;
                    outline: none;
                }
                .wdg-msg--box .wdg-msgbox--btn{
                    margin-top:20px;
                }
                @media screen and (max-width: 675px){
                    .wdg-msg--box{
                        height: unset;
                        width: unset;
                    }
                    .wdg-msg--box .wdg-msgbox--btn{
                        margin-bottom: 20px;
                    }
                }
                @media screen and (max-width: 420px){                   
                    .wdg-msg--box{
                        padding: 1px 30px;              
                    }
                    .wdg-msg--box .wdg-email-sent{
                        width: unset;
                        height: 175px;
                    }                   
                }
            </style> 
        <div class="container">            
            <div class="wdg-msg--box">
                <div class="wdg-email-sent"></div>
                <apex:form >
                    <p class="wdg-msg-title highlight">
                        Success !!!
                    </p>
                    <p class="wdg-msg-title">
                        An email has been sent to you with your temporary password.
                    </p>
                    <apex:outputlink value="{!URLFOR($Page.wk_wedge__wedgeSiteLogin)}"  styleclass="wdg-btn blue large wdg-msgbox--btn">
                        Go To Login Page
                    </apex:outputlink>
                </apex:form>
            </div>
            </div>
        </apex:define>
      </apex:composition>
</apex:page>
